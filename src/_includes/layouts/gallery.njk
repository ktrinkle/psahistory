<!DOCTYPE html>
<html lang="en-US" dir="ltr">
    {% include "partials/header.njk" %}
    <body>
        <div class="container">
        <a href="#main" class="skip-link">Skip to main content</a>
        {% include "partials/nav.njk" %}
        <h2>{{ title }}</h2>

        {{ content | safe }}

        <div class="container text-center">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
                {% for image in collections.all[0].data[ collectionName ] %}
                <div class="col">
                    <div class="image-block" onClick="showGallery({{ loop.index0 }})" data-bs-toggle="modal" data-bs-target="#gallery"> 
                        {% img
                            src=image.src,
                            alt=image.alt,
                            className="gallery-photo",
                            sizes="(max-width: 480px) 33.3vw, (min-width: 640px) 50vw, (min-width: 950px) 50vw, 33.3vw",
                            imgDir=image.imgDir,
                            outputDir=image.outputDir,
                            pathToRoot=image.pathToRoot,
                            id=loop.index0
                        %}
                        <div class="block-details">
                            <h4>{{ image.title }}</h4>
                            <p>{{ image.date }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

<div class="modal fade" id="gallery" tabindex="-1" aria-labelledby="Photo gallery" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content text-bg-dark">
            <div class="modal-body m-0">
                <div id="gallery-large" class="carousel slide">
                    <div class="carousel-inner">
                        {% for image in collections.all[0].data[ collectionName ] %}
                        <div class="carousel-item {% if loop.index0 == 0 %}active{% endif %}"><!-- add javascript logic-->
                            <img src="{{ image.pathToRoot}}{{ image.outputDir }}/{{ image.src }}" class="object-fit-contain" alt="{{ image.alt }}">
                        </div>
                        {% endfor %}
                    <button type="button" class="btn-close z-3" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#gallery-large" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#gallery-large" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    <button type="button" class="btn-close z-3 text-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>      
            </div>
        </div>
    </div>
</div>

        {% include "partials/footer.njk" %}
        </div>
    </body>
</html>